# WormHole Server Configuration
# Copy this file to .env and adjust values as needed

# Server bind address (0.0.0.0 to listen on all interfaces)
WH_HOST=0.0.0.0

# Server port
WH_PORT=8080

# WebSocket heartbeat interval in seconds (minimum: 10)
WH_WEBSOCKET_HEARTBEAT=30

# Request timeout in seconds (minimum: 1.0)
WH_REQUEST_TIMEOUT=30.0

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
WH_LOG_LEVEL=INFO

# Base domain for subdomain routing
WH_BASE_DOMAIN=wormhole.localhost
